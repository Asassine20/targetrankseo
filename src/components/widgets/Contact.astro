---
import FormContainer from '~/components/ui/Form.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Contact as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  inputs,
  textarea,
  disclaimer,
  button,
  description,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  {
    inputs && (
      <div class="flex flex-col max-w-2xl mx-auto rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-slate-900 shadow-lg p-6 sm:p-8 lg:p-10 w-full">
        <FormContainer
          formAction="https://formspree.io/f/xrbbggda"
          inputs={[
            {
              type: 'text',
              name: 'name',
              label: 'Full Name',
              placeholder: 'John Doe',
              required: true,
            },
            {
              type: 'email',
              name: 'email',
              label: 'Email Address',
              placeholder: 'you@example.com',
              required: true,
            },
            {
              type: 'text',
              name: 'company',
              label: 'Company Name',
              placeholder: 'Your Business Name',
            },
            {
              type: 'text',
              name: 'website',
              label: 'Website (if applicable)',
              placeholder: 'https://yourwebsite.com',
            },
          ]}
          textarea={{
            label: 'How can we help?',
            placeholder: 'Tell us about your project, challenges, or goals...',
            required: true,
          }}
          disclaimer={{
            label:
              'By submitting this form, you agree to our privacy policy and give us permission to contact you regarding your inquiry.',
          }}
          button={{
            text: 'Send Message',
            variant: 'primary',
          }}
          description="We typically respond within 24 hours during business days. Letâ€™s discuss how we can help your business grow!"
        />
      </div>
    )
  }
</WidgetWrapper>
