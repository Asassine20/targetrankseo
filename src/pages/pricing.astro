---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Flexible Pricing for Every Need"
    subtitle="Customize your plan to only pay for what you need, and cancel at any time—no questions asked."
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Why Choose Our Flexible Pricing?"
    subtitle="We understand every business is unique. Our pricing lets you pay only for the services you need."
    columns={2}
    items={[
      {
        title: 'Pay Only for What You Need',
        description: 'Select services based on your goals and budget, ensuring you only pay for what you actually use.',
        icon: 'tabler:coin',
      },
      {
        title: 'Cancel Anytime, No Questions Asked',
        description: 'We value your flexibility. If your needs change, you can cancel your plan at any time without any hassle.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Startup Fee for Initial Setup',
        description: 'There is a one-time startup fee to cover the initial setup and configuration of your services.',
        icon: 'tabler:stack',
      },
      {
        title: 'Monthly Fee Based on Your Needs',
        description: 'We’ll discuss the monthly fee based on the specific services and the complexity of your needs.',
        icon: 'tabler:calendar',
      },
      {
        title: 'No Hidden Fees',
        description: 'Our pricing is transparent—there are no hidden costs or surprises in your monthly billing.',
        icon: 'tabler:shield-check',
      },
      {
        title: '24/7 Customer Support',
        description: 'Get help whenever you need it, with support available at any time to assist with any questions.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="How It Works"
    tagline="Your personalized journey from plan to launch"
    isReversed={true}
    items={[
      {
        title: 'Explore Service Options',
        icon: 'tabler:number-1',
      },
      {
        title: 'Configure Your Plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Contact Us',
        icon: 'tabler:number-3',
      },
      {
        title: 'We Build & Implement A Solution',
        icon: 'tabler:number-4',
      },
      {
        title: 'Start Seeing Results!',
        icon: 'tabler:number-5',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Questions about pricing? We're here to answer any queries to help you make the right choice."
    columns={1}
    items={[
      {
        title: 'How do I configure my plan?',
        description:
          'You can customize your plan based on your needs and budget by selecting specific services you require. Contact us, and we’ll help tailor a solution for you.',
      },
      {
        title: 'Is there a setup fee?',
        description:
          'Yes, there is a one-time startup fee to cover the initial configuration of your services. After that, you only pay for the ongoing services each month.',
      },
      {
        title: 'Can I cancel my plan anytime?',
        description:
          'Absolutely! You can cancel your subscription at any time without any penalties or questions asked.',
      },
      {
        title: 'How is the monthly fee determined?',
        description:
          'The monthly fee depends on the services you choose and the complexity of your specific needs. We’ll discuss the details and provide a tailored quote for you.',
      },
      {
        title: 'Are there any hidden fees?',
        description:
          'No, we believe in transparent pricing. What you see is what you pay, with no hidden fees or surprise charges.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to get started?"
    subtitle="Contact us today to configure your plan and take your business to new heights."
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Now',
        href: 'https://formspree.io/f/xrbbggda', // Your form URL here
      },
    ]}
  />
</Layout>
