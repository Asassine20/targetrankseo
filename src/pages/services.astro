---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Digital Marketing Services Michigan | SEO, PPC, Web Design - Target Rank SEO',
  description: 'Discover our full range of digital marketing services, including SEO, PPC, web design, and more. Target Rank SEO helps Michigan businesses grow online with tailored strategies.'
};

---

<Layout metadata={metadata}>
<!-- Hero Widget ******************* -->

<Hero
  tagline="Services"
  title="Transform your digital presence with our expert solutions"
  subtitle="From SEO to custom software development, we provide tailored services to help your business grow and thrive in the digital world."
  actions={[{ variant: 'primary', target: '_blank', text: 'Get started', href: '/' }]}
  image={{
    src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
    alt: 'Digital Marketing Services',
  }}
/>

  <!-- Features2 Widget ************** -->

<Features2
title="Our Digital Marketing & Development Services"
subtitle="We offer a wide range of services to help your business grow and succeed online."
columns={3}
items={[
  {
    title: 'SEO',
    description:
      'Boost your website’s visibility and organic traffic with our proven search engine optimization strategies.',
    icon: 'tabler:search',
  },
  {
    title: 'PPC',
    description:
      'Drive targeted traffic and maximize ROI with expertly managed pay-per-click advertising campaigns.',
    icon: 'tabler:click',
  },
  {
    title: 'Content Creation',
    description:
      'Engage your audience with high-quality, tailored content that resonates and converts.',
    icon: 'tabler:writing',
  },
  {
    title: 'Social Media Management',
    description:
      'Build and maintain a strong social media presence with strategic planning and execution.',
    icon: 'tabler:brand-instagram',
  },
  {
    title: 'Website Design & Development',
    description:
      'Create stunning, user-friendly websites that deliver exceptional experiences and drive results.',
    icon: 'tabler:browser',
  },
  {
    title: 'Mobile App Development',
    description:
      'Bring your ideas to life with custom mobile apps designed for performance and usability.',
    icon: 'tabler:device-mobile',
  },
  {
    title: 'Custom Software',
    description:
      'Streamline your operations with tailor-made software solutions designed to meet your unique needs.',
    icon: 'tabler:code',
  },
]}
/>

  <!-- Content Widget **************** -->

<Content
isReversed
items={[
  {
    title: 'Proven Strategies',
    description:
      'We use data-driven strategies to deliver measurable results, ensuring your business achieves its goals.',
    icon: 'tabler:chart-bar',
  },
  {
    title: 'Tailored Solutions',
    description:
      'Every business is unique. We customize our services to fit your specific needs and objectives.',
    icon: 'tabler:tools',
  },
  {
    title: 'Cutting-Edge Technology',
    description:
      'Stay ahead of the competition with the latest tools and technologies in digital marketing and development.',
    icon: 'tabler:device-desktop',
  },
  {
    title: 'Transparent Reporting',
    description:
      'We provide clear, detailed reports so you can track progress and see the impact of our work.',
    icon: 'tabler:file-analytics',
  },
]}
image={{
  src: 'https://images.unsplash.com/photo-1525909002-1b05e0c869d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
  alt: 'Digital Marketing Features',
}}
>
<Fragment slot="content">
  <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Choose Us?</h3>
</Fragment>
</Content>

  <!-- Content Widget **************** -->

<Content
isAfterContent
items={[
  {
    title: 'Increased ROI',
    description:
      'Our strategies are designed to maximize your return on investment, ensuring every dollar spent delivers measurable results.',
    icon: 'tabler:growth',
  },
  {
    title: 'Enhanced Online Presence',
    description:
      'Strengthen your brand’s visibility and credibility with a professional, optimized digital presence.',
    icon: 'tabler:world',
  },
  {
    title: 'Scalable Solutions',
    description:
      'Our services grow with your business, providing flexible solutions that adapt to your evolving needs.',
    icon: 'tabler:arrows-up',
  },
  {
    title: 'Expert Support',
    description:
      'Get access to a team of experienced professionals dedicated to helping you achieve your business goals.',
    icon: 'tabler:headset',
  },
]}
image={{
  src: 'https://images.unsplash.com/photo-1552664688-cf412ec27db2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
  alt: 'Business Benefits',
}}
>
<Fragment slot="content">
  <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">What You Gain</h3>
</Fragment>
</Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
  title="What Our Clients Say"
  testimonials={[
    {
      testimonial: `Working with Target Rank SEO has been a game-changer for our online presence. Their SEO strategies have significantly boosted our organic traffic, and their team is always responsive and professional.`,
      name: 'Rena S.',
      job: 'Rochester Beauty Bar Medspa Owner',
      image: {
        src: 'https://khnxrwqpws.ufs.sh/f/ZfzyDSYoDactMtJwxcIWLOKpy3HmqakQns5l6iJz4D8GuheX',
        alt: 'Rena S. Image',
      },
    },
    {
      testimonial: `The custom website they designed for us is stunning and user-friendly. It has helped us convert more leads into customers, and their ongoing support has been invaluable. Highly recommend their services!`,
      name: 'Emmanuel Y.',
      job: 'AEY Packaging Owner',
      image: {
        src: 'https://khnxrwqpws.ufs.sh/f/ZfzyDSYoDactx6PVLihe3nrWOSw576bIa9MCV420UY1ANuTF',
        alt: 'Emmanuel Y. Image',
      },
    },
    {
      testimonial: `Their social media management has transformed our online engagement. Our followers have grown exponentially, and the content they create is always on-brand and impactful. Truly a top-notch team!`,
      name: 'Andrew S.',
      job: 'GemTCG Owner',
      image: {
        src: 'https://khnxrwqpws.ufs.sh/f/ZfzyDSYoDacthNEMsbeGkyBRe0c2TPpVJUnOFQ3ICbaAL5Yo',
        alt: 'Andrew S. Image',
      },
    },
  ]}
callToAction={{
  target: '_blank',
  text: 'Read more testimonials...',
  href: '/testimonials',
  icon: 'tabler:chevron-right',
}}
/>

<!-- CallToAction Widget *********** -->

<CallToAction
  actions={[
    {
      variant: 'primary',
      text: 'Get Started',
    },
  ]}
  title="Ready to Transform Your Business?"
  subtitle="Let’s work together to create a digital strategy that drives results. Contact us today to get started!"
/>
</Layout>
